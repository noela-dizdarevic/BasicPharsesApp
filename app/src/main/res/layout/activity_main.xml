<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.noela.basicpharsesapp.MainActivity">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:layout_width="200dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="casual"
            android:text="Let's learn some Franch"
            android:textAlignment="textStart"
            android:textSize="18sp" />


        <Button
            android:id="@+id/hello"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginTop="80dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:text="Hello"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/howareyou"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:text="How Are you?"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/ilivein"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:text="I live in"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/please"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:text="Please"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/mynameis"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:text="My name is"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/welcome"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:text="Welcome"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/goodevening"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:text="Good evening"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/doyouspeakenglish"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:text="Do you &#10; speak English?"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />






    </GridLayout>


</android.support.constraint.ConstraintLayout>
